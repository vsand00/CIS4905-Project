<p>
    <strong>Title:</strong>
    <%= event.title %>
</p>
<p>
    <strong>Date:</strong>
    <%= event.date %>
</p>
<p>
    <strong>Location:</strong>
    <%= event.location %>
</p>

<% if logged_in? %>
    <p>
    <%= link_to 'Destroy Event', [event.organization, event],
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
    </p>
<% end %>