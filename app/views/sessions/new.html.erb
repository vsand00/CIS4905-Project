<div class="container">
  <div class="row">
    <div class="col-4">
    </div>
    <div class="col">
      <h1>Login</h1>
      <div class="row search-form-container">
        <div class="col-2">
        </div>
        <div class="col-8">
         <%= form_tag '/login' do %>
         <div class="row">
         <%= label_tag :username%>
         <%= text_field_tag :username %>
         </div>
         <div class="row">
         <%= label_tag :password%>
         <%= password_field_tag :password%>
         </div>
         <div class="col-2">
        </div>
         </div>
         </div>
         <%= submit_tag("Login", :class=>"btn btn-outline-dark")%>
      <%end%>
       
      <%= button_to "Back to Welcome", '/welcome', method: :get, :class=>"btn btn-outline-dark" %>
   </div>
   <div class="col-4">
   </div>
  </div>
</div>




  