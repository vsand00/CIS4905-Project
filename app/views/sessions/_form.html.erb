<div class="container">
  <%= form_tag search_path, method: "get" do =%>
    <div class="row">
    <%= label_tag(:zip_code, "Zip-code: ") %>
    <%= text_field_tag(:zip_code) %>
    </div>
    <div class="row">
    <%= label_tag(:radius, "Radius: ") %>
    <%= text_field_tag(:radius) %>
    </div>
  <%= submit_tag("Search") %>
  <% end %>
</div>